<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sloydev.collapsingavatartoolbar.sample">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name="com.god.collapsingavatartoolbar.sample.Activity.MainActivity"
            android:theme="@style/Theme.Sample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.god.collapsingavatartoolbar.sample.Activity.ItemDialog"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/android:Theme.Light"></activity>

        <activity
            android:name="com.god.collapsingavatartoolbar.sample.Activity.DeviceFindActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/Theme.Sample"></activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
